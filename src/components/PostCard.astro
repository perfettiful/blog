---
interface Props {
  title: string;
  description: string;
  date: Date;
  slug: string;
  tags?: string[];
}

const { title, description, date, slug, tags = [] } = Astro.props;

const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<article class="group">
  <a href={`/blog/${slug}`} class="block">
    <div class="p-6 rounded-xl border border-primary-200/30 dark:border-primary-900/30 bg-white/80 dark:bg-zinc-900/60 hover:border-primary-400/50 dark:hover:border-primary-700/50 hover:shadow-lg hover:-translate-y-0.5 transition-all duration-200">
      <div class="flex items-center gap-3 mb-3">
        <time class="text-sm text-zinc-500 dark:text-zinc-500 font-medium" datetime={date.toISOString()}>
          {formattedDate}
        </time>
        {tags.length > 0 && (
          <div class="flex flex-wrap gap-1.5">
            {tags.map((tag) => (
              <span class="text-xs px-2.5 py-0.5 rounded-full bg-primary-100/80 dark:bg-primary-900/50 text-primary-700 dark:text-primary-300 font-medium">
                {tag}
              </span>
            ))}
          </div>
        )}
      </div>

      <h2 class="text-xl font-bold text-zinc-900 dark:text-zinc-100 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors duration-200">
        {title}
      </h2>

      <p class="mt-2 text-zinc-600 dark:text-zinc-400 line-clamp-2 leading-relaxed">
        {description}
      </p>

      <!-- Read more indicator -->
      <div class="mt-4 flex items-center gap-1 text-sm font-semibold text-primary-600 dark:text-primary-400 opacity-0 group-hover:opacity-100 transition-opacity duration-200">
        Read more
        <svg class="w-4 h-4 transform group-hover:translate-x-0.5 transition-transform duration-200" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </div>
    </div>
  </a>
</article>
