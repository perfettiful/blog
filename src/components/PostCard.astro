---
interface Props {
  title: string;
  description: string;
  date: Date;
  slug: string;
  tags?: string[];
}

const { title, description, date, slug, tags = [] } = Astro.props;

const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<article class="group">
  <a href={`/blog/${slug}`} class="block">
    <div class="p-6 rounded-xl border border-primary-200/40 dark:border-primary-900/40 bg-white dark:bg-zinc-900/50 hover:border-primary-500 dark:hover:border-primary-500 transition-all duration-200 hover:shadow-lg hover:shadow-primary-500/10">
      <time class="text-sm text-zinc-500 dark:text-zinc-500" datetime={date.toISOString()}>
        {formattedDate}
      </time>

      <h2 class="mt-2 text-xl font-semibold text-zinc-900 dark:text-zinc-100 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors">
        {title}
      </h2>

      <p class="mt-2 text-zinc-600 dark:text-zinc-400 line-clamp-2">
        {description}
      </p>

      {tags.length > 0 && (
        <div class="mt-4 flex flex-wrap gap-2">
          {tags.map((tag) => (
            <span class="text-xs px-2 py-1 rounded-full bg-primary-100 dark:bg-primary-900/40 text-primary-700 dark:text-primary-300">
              {tag}
            </span>
          ))}
        </div>
      )}
    </div>
  </a>
</article>
