---
import '../styles/global.css';
// Bundle fonts locally instead of Google Fonts CDN
import '@fontsource-variable/inter';
// JetBrains Mono loaded only when needed (code blocks)
import { ViewTransitions } from 'astro:transitions';

interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const { title, description = "A blog about software development, cybersecurity, and the tech that powers our world.", image = "/og-image.svg" } = Astro.props;

const pageTitle = title ? `blog.perfetti.dev | ${title}` : 'blog.perfetti.dev';
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalURL} />

    <title>{pageTitle}</title>
    <meta name="description" content={description} />
    <meta name="author" content="Nathan Perfetti" />
    <meta name="generator" content={Astro.generator} />

    <!-- Open Graph / Social -->
    <meta property="og:type" content={title ? "article" : "website"} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.site)} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content={pageTitle} />
    <meta property="og:site_name" content="blog.perfetti.dev" />
    <meta property="og:locale" content="en_US" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(image, Astro.site)} />
    <meta name="twitter:image:alt" content={pageTitle} />

    <!-- RSS -->
    <link rel="alternate" type="application/rss+xml" title="RSS Feed" href="/rss.xml" />

    <!-- View Transitions -->
    <ViewTransitions />

    <!-- Theme handling - runs before paint to prevent flicker -->
    <script is:inline>
      (function() {
        const theme = localStorage.getItem('theme') || 'dark';
        if (theme === 'dark') {
          document.documentElement.classList.add('dark');
        } else {
          document.documentElement.classList.remove('dark');
        }
      })();

      // Persist theme across View Transitions
      document.addEventListener('astro:after-swap', () => {
        const theme = localStorage.getItem('theme') || 'dark';
        if (theme === 'dark') {
          document.documentElement.classList.add('dark');
        } else {
          document.documentElement.classList.remove('dark');
        }
      });
    </script>

    <style>
      /* Smooth page transitions - minimal to reduce flicker */
      ::view-transition-old(root),
      ::view-transition-new(root) {
        animation-duration: 150ms;
        animation-timing-function: ease-out;
      }

      ::view-transition-old(root) {
        animation-name: fade-out;
      }

      ::view-transition-new(root) {
        animation-name: fade-in;
      }

      @keyframes fade-in {
        from { opacity: 0.8; }
        to { opacity: 1; }
      }

      @keyframes fade-out {
        from { opacity: 1; }
        to { opacity: 0.8; }
      }

      /* Main content slide */
      ::view-transition-old(main) {
        animation: 120ms ease-out slide-out;
      }

      ::view-transition-new(main) {
        animation: 150ms ease-out slide-in;
      }

      @keyframes slide-in {
        from { opacity: 0; transform: translateY(8px); }
        to { opacity: 1; transform: translateY(0); }
      }

      @keyframes slide-out {
        from { opacity: 1; transform: translateY(0); }
        to { opacity: 0; transform: translateY(-8px); }
      }
    </style>
  </head>
  <body class="min-h-screen flex flex-col font-sans">
    <slot />

    <!-- Global lazy image handler -->
    <script>
      function setupLazyImages() {
        const lazyImages = document.querySelectorAll('.img-lazy') as NodeListOf<HTMLImageElement>;
        
        lazyImages.forEach((img) => {
          const skeleton = img.previousElementSibling as HTMLElement | null;
          
          function showImage() {
            img.classList.add('opacity-100');
            if (skeleton && skeleton.classList.contains('skeleton-shimmer')) {
              skeleton.style.opacity = '0';
              setTimeout(() => {
                skeleton.style.display = 'none';
              }, 300);
            }
          }
          
          // Check if already loaded (cached)
          if (img.complete && img.naturalHeight !== 0) {
            showImage();
          } else {
            img.addEventListener('load', showImage, { once: true });
          }
        });
      }

      // Run on initial load
      setupLazyImages();
      
      // Run after View Transitions
      document.addEventListener('astro:after-swap', setupLazyImages);
      
      // Also run when DOM is ready (for dynamic content)
      document.addEventListener('DOMContentLoaded', setupLazyImages);
    </script>
  </body>
</html>
