---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import PostCard from '../components/PostCard.astro';

const posts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 5);
---

<BaseLayout>
  <Header />

  <main class="flex-1" transition:name="main" transition:animate="none">
    <!-- Hero Section -->
    <section class="max-w-4xl mx-auto px-4 py-20">
      <div class="flex flex-col md:flex-row items-center gap-12 md:gap-16">
        <!-- Avatar with inset ring - links to about -->
        <a href="/about" class="shrink-0 group block">
          <div class="relative">
            <!-- Subtle glow on hover -->
            <div class="absolute -inset-0.5 bg-gradient-to-br from-primary-400 to-primary-600 rounded-3xl opacity-0 group-hover:opacity-40 blur-md transition-all duration-300"></div>
            <!-- Inset border container -->
            <div class="relative p-1 bg-gradient-to-br from-primary-400 via-primary-500 to-primary-600 rounded-2xl shadow-lg group-hover:shadow-xl transition-all duration-200">
              <div class="relative w-36 h-36 md:w-44 md:h-44 rounded-xl overflow-hidden">
                <!-- Skeleton shimmer -->
                <div class="absolute inset-0 bg-gradient-to-br from-primary-300 to-primary-400 dark:from-primary-700 dark:to-primary-800 skeleton-shimmer transition-opacity duration-300"></div>
                <img 
                  src="/prof-pic-low-poly.png" 
                  alt="Nathan Perfetti portrait" 
                  loading="eager"
                  class="absolute inset-0 w-full h-full object-cover opacity-0 transition-opacity duration-500 ease-out img-lazy transform group-hover:scale-[1.01] transition-transform duration-200"
                />
              </div>
            </div>
          </div>
        </a>

        <!-- Content -->
        <div class="flex-1 text-center md:text-left space-y-6">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-zinc-900 dark:text-zinc-100 tracking-tight">
            Hey, I'm <span class="text-reveal font-extrabold">Nathan</span>
          </h1>
          <p class="text-lg md:text-xl text-zinc-600 dark:text-zinc-400 leading-relaxed max-w-xl">
            Welcome to my corner of the internet. I write about software development, cybersecurity, gaming, and other curiosities.
          </p>
          <div class="flex flex-wrap justify-center md:justify-start gap-4 pt-2">
            <a
              href="/blog"
              class="group/btn inline-flex items-center gap-2 px-7 py-3.5 rounded-xl bg-primary-600 text-white font-semibold shadow-md hover:bg-primary-500 hover:shadow-lg hover:-translate-y-0.5 active:translate-y-0 transition-all duration-200"
            >
              Read the blog
              <svg class="w-4 h-4 transform group-hover/btn:translate-x-1 transition-transform duration-200" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
            <a
              href="/about"
              class="inline-flex items-center gap-2 px-7 py-3.5 rounded-xl border-2 border-primary-300 dark:border-primary-700 text-primary-700 dark:text-primary-300 font-semibold hover:bg-primary-100 dark:hover:bg-primary-900/40 hover:border-primary-400 dark:hover:border-primary-600 hover:-translate-y-0.5 active:translate-y-0 transition-all duration-200"
            >
              About me
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Recent Posts -->
    <section class="max-w-4xl mx-auto px-4 pb-20">
      <div class="flex items-center justify-between mb-10">
        <h2 class="text-2xl md:text-3xl font-bold text-zinc-900 dark:text-zinc-100">
          Recent Posts
        </h2>
        <a
          href="/blog"
          class="group/link inline-flex items-center gap-1 text-primary-600 dark:text-primary-400 hover:text-primary-500 dark:hover:text-primary-300 text-sm font-semibold transition-colors duration-200"
        >
          View all posts 
          <span class="inline-block transform group-hover/link:translate-x-1 transition-transform duration-200">&rarr;</span>
        </a>
      </div>

      {posts.length === 0 ? (
        <p class="text-zinc-600 dark:text-zinc-400">No posts yet. Check back soon!</p>
      ) : (
        <div class="space-y-5">
          {posts.map((post) => (
            <PostCard
              title={post.data.title}
              description={post.data.description}
              date={post.data.date}
              slug={post.id}
              tags={post.data.tags}
              heroImage={post.data.heroImage}
            />
          ))}
        </div>
      )}
    </section>
  </main>

  <Footer />
</BaseLayout>
