---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import PostCard from '../components/PostCard.astro';

const posts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 5);
---

<BaseLayout title="perfettiful | A blog about tech and gaming">
  <Header />

  <main class="flex-1">
    <!-- Hero Section -->
    <section class="max-w-3xl mx-auto px-4 py-16">
      <div class="space-y-6">
        <h1 class="text-5xl font-bold text-zinc-900 dark:text-zinc-100">
          Hey, I'm Nathan
        </h1>
        <p class="text-xl text-zinc-600 dark:text-zinc-400 leading-relaxed">
          Welcome to my corner of the internet. I write about tech, gaming, and the random things that spark my curiosity.
          I've been tinkering with computers and building things ever since I discovered you could do more with them than just play games.
        </p>
        <div class="flex gap-4">
          <a
            href="/blog"
            class="inline-flex items-center gap-2 px-6 py-3 rounded-lg bg-primary-600 text-white font-medium hover:bg-primary-700 transition-colors"
          >
            Read the blog
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
          <a
            href="/about"
            class="inline-flex items-center gap-2 px-6 py-3 rounded-lg border border-zinc-300 dark:border-zinc-700 text-zinc-700 dark:text-zinc-300 font-medium hover:bg-zinc-100 dark:hover:bg-zinc-800 transition-colors"
          >
            About me
          </a>
        </div>
      </div>
    </section>

    <!-- Recent Posts -->
    <section class="max-w-3xl mx-auto px-4 pb-16">
      <div class="flex items-center justify-between mb-8">
        <h2 class="text-2xl font-bold text-zinc-900 dark:text-zinc-100">
          Recent Posts
        </h2>
        <a
          href="/blog"
          class="text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 transition-colors text-sm font-medium"
        >
          View all posts &rarr;
        </a>
      </div>

      {posts.length === 0 ? (
        <p class="text-zinc-600 dark:text-zinc-400">No posts yet. Check back soon!</p>
      ) : (
        <div class="space-y-6">
          {posts.map((post) => (
            <PostCard
              title={post.data.title}
              description={post.data.description}
              date={post.data.date}
              slug={post.id}
              tags={post.data.tags}
            />
          ))}
        </div>
      )}
    </section>
  </main>

  <Footer />
</BaseLayout>
